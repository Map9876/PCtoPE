<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/card_texture_card"
    card_view:cardBackgroundColor="#0085AC"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/material_design_3"
    android:adjustViewBounds="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_gravity="bottom|start"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/item_linear_layout">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/card_texture_icon"
                android:transitionName="@string/pack_icon_transition"
                android:adjustViewBounds="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_texture_name"
                android:textColor="#2c3e50"
                android:textSize="30dp"
                android:text="Title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_texture_name_subname"
                android:textSize="20dp"
                android:text="subtitle"
                android:textColor="#34495e"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card_texture_alert_icon"
        android:adjustViewBounds="true"
        android:src="@drawable/alert_octagram"
        android:layout_margin="@dimen/text_margin"
        android:layout_gravity="bottom|end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:visibility="gone"/>

</android.support.v7.widget.CardView>